import argparse
import xlrd

# get list
input = argparse.ArgumentParser(description="Get a PDF's list and download them")
input.add_argument('-l', '--list', type=str, help='list filepath')
args = input.parse_args()
if args is None:
  raise Exception('no arguments provided')

